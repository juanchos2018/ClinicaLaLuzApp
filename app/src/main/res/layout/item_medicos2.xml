<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginBottom="5dp"
    android:background="#F2F2F2"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/imgdoctor2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/default_profile_image"
            app:siBorderWidth="2dp"
            app:siBorderColor="@color/red"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvnombredoctor2"
                android:text="Doctor"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/tvenombreespecialidad"
                android:drawableLeft="@drawable/ic_especialidad"
                android:drawablePadding="6dp"
                android:text="Direccion de la clinicassssssss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/tvproxima"
                android:text="Proxima  Cita"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/ic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
    </LinearLayout>


